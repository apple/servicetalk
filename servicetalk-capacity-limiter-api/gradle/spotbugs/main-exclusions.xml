<FindBugsFilter>
  <!-- Builder pattern classes are designed for single-threaded use, no thread safety needed -->
  <Match>
    <Or>
      <Class name="io.servicetalk.capacity.limiter.api.AimdCapacityLimiterBuilder"/>
      <Class name="io.servicetalk.capacity.limiter.api.FixedCapacityLimiterBuilder"/>
      <Class name="io.servicetalk.capacity.limiter.api.GradientCapacityLimiterBuilder"/>
    </Or>
    <Bug pattern="AT_STALE_THREAD_WRITE_OF_PRIMITIVE"/>
  </Match>
</FindBugsFilter>
